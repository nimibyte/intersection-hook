{
  "name": "@nimibyte/intersection-hook",
  "version": "1.0.1-beta.6",
  "description": "React scrollspy hook powered by IntersectionObserver for active section navigation",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "README.ai.md",
    "llms.txt",
    "LICENSE"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\" && rollup -c",
    "test": "jest",
    "lint": "eslint src test",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nimibyte/intersection-hook.git"
  },
  "keywords": [
    "react",
    "hook",
    "hooks",
    "intersection",
    "intersection-observer",
    "scrollspy",
    "active-section",
    "table-of-contents",
    "in-page-navigation",
    "smooth-scroll",
    "viewport"
  ],
  "bugs": {
    "url": "https://github.com/nimibyte/intersection-hook/issues"
  },
  "homepage": "https://github.com/nimibyte/intersection-hook#readme",
  "author": "Nimibyte Labs <info@nimibyte.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.4.2",
    "rollup": "^4.29.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.2.5",
